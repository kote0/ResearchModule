@using ResearchModule.Components
@using ResearchModule.Components.Models.Card
@model long
@{
    //настроить стили
    var id = string.Format("Author[{0}].", Model);
    var name = string.Concat("CreateAuthors_", id);
}

@Html.Card(name).Row((Card a) =>
{
    a.For()
        .Content(Html.Button(id, "", Html.Icon("remove"), new { type = "button", onClick = string.Format("Author.remove('body_{0}')", name) })).Size(1)
        .Row(Html.TextBox(id + "Surname", "", new { @class = "form-control", placeHolder="Фамилия" })).Size(3)
        .Row(Html.TextBox(id + "Name", "", new { @class = "form-control", placeHolder = "Имя" })).Size(3)
        .Row(Html.TextBox(id + "LastName", "", new { @class = "form-control", placeHolder = "Отчетсво" })).Size(3)
        .Row(Html.CheckBox(id + "SoAuthor", false)).Content(" Соавтор").Size(2);
    return a;
}).Render()
