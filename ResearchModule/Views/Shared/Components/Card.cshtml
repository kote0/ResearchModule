@model ResearchModule.Components.Models.Card.Card

@{ 
    var headerExistense = string.IsNullOrEmpty(Model.headerName);
}

<div id="accordion_@Model.id" role="tablist" style="@(Model.style)">
    <div class="card">
        @if (!headerExistense)
        {
            <div class="card-header" role="tab" id="heading_@Model.id">
                <h5 class="mb-0">
                    <a data-toggle="collapse" href="#collapse_@Model.id" aria-expanded="true" aria-controls="collapse_@Model.id">
                        @Model.headerName
                    </a>
                </h5>
            </div>
        }
        <div id="collapse_@Model.id" class="collapse @(headerExistense || Model.collapse ? " in" : null)" aria-expanded="@(headerExistense)" role="tabpanel" aria-labelledby="heading_@Model.id" data-parent="#accordion_@Model.id" style="">
            <div class="card-body " id="body_@Model.id">
                @Html.Partial("Components/CardRow", Model.rows)
            </div>
        </div>
    </div>
</div>

