@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using ResearchModule.Models

@inject SignInManager<User> SignInManager

    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
              method="post" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action("Profile", "Account", new { name = User.Identity.Name})">@User.Identity.Name</a></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
            </ul>
        </form>
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li><a id="registerLink" asp-controller="Account" asp-action="Register">Регистрация</a></li>
            <li><a id="loginLink" asp-controller="Account" asp-action="Login">Войти</a></li>
        </ul>
    }
